%{
#include <dVirtualMachine.h>
#include "dAssemblerLexical.h"
#include "dAssemblerCompiler.h"
//
// Newton virtual machine assembler grammar
// based loosely on a subset and a hybrid between the MIPS R3000 and the Intel 386 instructions set 
//
%}


%union 
{
	class dUserVariable
	{
		public:
		dUserVariable () 
			:m_token (dToken (0)), m_data("")
		{
		}
		
		
		dUserVariable (dToken token, const char* const text)
			:m_token(token), m_data (text) 
		{
		}
		dToken m_token;
		string m_data;
	};
}


	
%token IMPORT LITERAL PRIVATE

%token BEGIN END

%token INT

%token INTEGER 

%token REGISTER

%token MOVE LEA 
%token LOADB LOADW LOADD 
%token STOREB STOREW STORED
%token SLL SRL
%token AND OR XOR NOT
%token ADD SUB MUL DIV ABS NEG
%token BEQ BNE BLT BLE BGT BGET
%token CALL CALLR RET SYSCALL JUMP JUMPR
%token ENTER EXIT PUSH POP
		  



%start module


%%
module		: segmentList
			|
			;
				
				
segmentList	: segment 
			| segmentList segment 
			;
			
			
segment		: import
			| dataDeclaration	
			| funtionDeclaration
			;
			
			
import		: IMPORT '<' fileName '>'
			; 			
			
fileName	: literal
			| fileName '.' literal
			;
			
dataDeclaration	: dataType literal							
				| dataType literal '=' constantExpression	
				;
				
constantExpression : INTEGER 
				   ;	
				   
dataType		: INT 
				;				

literal			: LITERAL 
				;	


				   
funtionDeclaration	: BEGIN literal visibility instructionList END
					;
					
visibility	: PRIVATE
			|
			;

			
regiter	: REGISTER
		;

instructionList	: instruction
				| instructionList instruction
				;

instruction	: move
			| load
			| store
			| shift
			| logical
			| arithemetic
			| conditional
			| callJumpRet
			| stack
			;
			
move : moveOpcode register ',' register
	 | moveOpcode register ',' register ',' immediate
	 ;			
			
load : loadOpcode register ',' literal
	 ;			
	 
store : storeOpcode register ',' literal
	  ;			
	 
	 
shift : shiftOpcode register ',' literal
	  ;			
			
logical : logicalOpcode register ',' literal
	    ;			

arithemetic : arithmeticOpcode register ',' literal
	        ;			

conditional : conditionalOpcode register ',' register ',' immediate
			;
			
callJumpRet : CALL register ',' immediate
			| CALLR register ',' register
			| RET register
			| SYSCALL register ',' register ',' immediate
			| JUMP register
			| JUMPR immediate
			;
			
stack : ENTER register ',' register ',' immediate
	  | EXIT register ',' register
	  | PUSH register ',' immediate
	  | POP register ',' immediate	  
	  ;
			

moveOpcode : MOVE
		   | LEA	
		   ;
				 
loadOpcode : LOADB
		   | LOADW
		   | LOADD		   
		   ;
		   
storeOpcode : STOREB
			| STOREW
			| STORED			
		    ;
		   
			 
shiftOpcode : SLL			 
		    | SRL
		    ;
		     
logicalOpcode : AND
			  | OR	
			  | XOR
			  | NOT
			  ;
			
arithmeticOpcode : ADD
				 | SUB	
				 | MUL
				 | DIV
				 | ABS
				 | NEG
				 ;

conditionalOpcode : BEQ
				  | BNE
				  | BLT
				  | BLE
				  | BGT
				  | BGET
				  ;

%%










