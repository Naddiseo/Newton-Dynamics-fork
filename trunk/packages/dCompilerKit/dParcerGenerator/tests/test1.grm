// very simple sample SLR(1) grammar 

%union 
{
	class dUserVariable: public string
	{
		dUserVariable () 
			:string("")
		{
		}
		
		dUserVariable (Token token, const char* const text)
			:m_token(token), m_data (text) 
		{
		}
		Token m_token;
	};
}

%token id
%start E

%%
E	: E '+' T		{$$ = $1 + " + " + $2; printf ("%s\n", $$.c_str());}
	| T				{$$ = $1;}
	;
	
T	: T '*'	F		{$$ = $1 + " * " + $2;}
	| F				{$$ = $1;}
	;
	
F	: '(' E ')'		{$$ = $2;}
	| id			{$$ = $1;}
	;
		
%%



