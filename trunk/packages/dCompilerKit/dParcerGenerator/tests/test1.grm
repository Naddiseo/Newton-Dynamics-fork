// very simple sample ADD and MULT grammar 

%union 
{
	class myVariable 
	{
		myVariable ()
		myVariable (Token token, const char* const text)
			:m_token(token), m_data (text) 
		{
		}
		Token m_token;
		string m_data;
	};
}

%token id
%start E

%%
E	: E '+' T
	| T
	;
	
T	: T '*'	F
	| F
	;
	
F	: '(' E ')'
	| id
	;
		
